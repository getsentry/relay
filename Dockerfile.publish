# Copy the semaphore binary to a clean image
FROM debian:stretch-slim

RUN apt-get update \
    && apt-get install -y ca-certificates gosu --no-install-recommends \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

RUN groupadd -r semaphore && useradd -r -m -g semaphore semaphore

COPY semaphore /bin/semaphore

WORKDIR /work
EXPOSE 3000
VOLUME /etc/semaphore

COPY ./docker-entrypoint.sh /
ENTRYPOINT ["/bin/bash", "/docker-entrypoint.sh"]
